@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel

@{
    ViewData["Title"] = "SubCatergoryDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Sub Category Details</h2>
<br />

<div class="backgroundWhite border">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="SubCategory.Name" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input readonly asp-for="SubCategory.Category.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailsAndBackToListButton" model="@Model.SubCategory.Id" />
        </div>
    </div>
</div>
